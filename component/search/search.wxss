.search {
  top: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  z-index: 101;
  padding: 30rpx 0 30rpx;
  background: #fff;
}

.search.borderbottom::after {
  content: "";
  display: block;
  width: 100%;
  position: absolute;
  bottom: -3rpx;
  right: 0;
  height: 1px;
  background: #d9d9d9;
  transform: scaleY(0.5);
  z-index: 2;
}

.searchWrap {
  /* width: 600rpx; */
  width: 690rpx;
  /* background: rgba(0, 0, 0, 0.3); */
  background: #fafafa;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 10rpx 100rpx;
  border-radius: 50rpx;
  position: relative;
  color: #fff;
  border: 1px solid #d9d9d9;
}

.searchWrap image {
  display: block;
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 10rpx;
}

.searchWrap input {
  height: 40rpx;
  min-height: 40rpx;
}

.searchWrap .searchIcon {
  left: 190rpx;
}

.searchWrap .scanIcon {
  right: 30rpx;
  z-index: 100000;
}
