.productList {
  position: relative;
  z-index: 100;
  background: #fff;
  padding-top: 2%;
}

.productItem {
  display: flex;
  margin: 0 2% 2%;
  background: #fff;
  /* border-bottom: 1rpx solid #d9d9d9; */
  position: relative;
  z-index: 99;
  border: 1px solid #ececec;
}

.productItem:after {
  content: " ";
  position: absolute;
  left: 2%;
  right: 0;
  height: 1px;
  color: #d9d9d9;
  z-index: 2;
  bottom: 0;
  /* border-bottom: 1px solid #e9e9e9; */
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.productItem:last-child::after {
  left: 0;
}

.imageWrap {
  width: 350rpx;
  height: 0;
  padding-top: 350rpx;
  position: relative;
  border-right: 1px solid #ececec;
}

.imageWrap image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  padding: 10rpx 0 10rpx 20rpx;
}

.title {
  width: 100%;
  font-size: 28rpx;
  line-height: 1.5;
  padding-right: 50rpx;
  box-sizing: border-box;
}

.delete {
  position: absolute;
  top: 0;
  right: 10rpx;
}

.delete image {
  width: 28rpx;
  height: 28rpx;
}

.overtwo {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

