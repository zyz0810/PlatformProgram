}

.spec {
  background: #fff;
  position: relative;
  padding-top: 60rpx;
  box-sizing: border-box;
}

.spec .close {
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}

.spec .close .closeImg {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.spec .item {
  display: flex;
  align-items: center;
  height: 120rpx;
  padding-left: 20rpx;
}

.spec .left {
  flex: 1;
  font-size: 28rpx;
}

.spec .title {
  font-weight: bold;
}


.spec .gray {
