}

.bottom {
  position: fixed;
  z-index: 999999;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  background: #333;
  color: #fff;
}

.bottom label {
  padding: 0 20rpx 0 2%;
  height: 100%;
}

.bottom checkbox {
  display: block;
  width: 30rpx;
  height: 45rpx;
}

.bottom checkbox-group {
  display: flex;
  align-items: center;
  height: 100%;
}

.bottom .del {
