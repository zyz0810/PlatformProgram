/* pages/index/seckill/index.wxss */

/* 限时抢购 */

.timeLimit {
  padding: 40rpx 4%;
  background: #fff;
}

.timeLimit_tag {
  color: #ffe3e3;
  background: #fd407a;
  display: inline-block;
  font-style: italic;
  padding: 2px 10px;
  border-top-left-radius: 16px;
  border-bottom-right-radius: 16px;
  margin-left: 10px;
}

.timeLimit .timeLimit_list {
  padding-top: 4%;
}

.timeLimit .timeLimit_list .lineItem {
  -webkit-box-direction: normal;
  -webkit-box-orient: horizontal;
  -webkit-flex-direction: row;
  -moz-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: stretch;
  -webkit-align-items: stretch;
  -moz-align-items: stretch;
  align-items: stretch;
  margin-bottom: 60rpx;
  padding: 0;
}

.timeLimit .timeLimit_list .lineItem:last-child {
  margin-bottom: 0;
}

.timeLimit .timeLimit_list .lineItem .center {
  padding: 1% 0 1% 2%;
  -webkit-box-direction: normal;
  -webkit-box-orient: vertical;
  -webkit-flex-direction: column;
  -moz-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  -moz-justify-content: space-between;
  justify-content: space-between;
}

.timeLimit .timeLimit_list .lineItem .left {
  width: 27vw;
  height: 27vw;
}

.timeLimit .timeLimit_list .lineItem .left image {
  border-radius: 8px;
}

.timeLimit_list .lineItem .center .tag {
  line-height: 1;
}

.timeLimit_list .lineItem .center .tag text {
  color: #ff9c9c;
  background: #ffeded;
  border-radius: 3px;
  line-height: 1.5;
  padding: 0 5px;
  margin-right: 5px;
}

/* .timeLimit_list .lineItem .center .price text{
  margin-right: 20px;
} */

.timeLimit_list .lineItem .center .price {
  position: relative;
}

.old_price {
  color: #999;
  text-decoration: line-through;
  margin-left: 20rpx;
}

.buy {
  padding: 2px 8px;
  border-radius: 30rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  margin-right: 0;
}

.time {
  position: absolute;
  bottom: 4em;
  right: 10rpx;
}

.time text {
  color: #999;
  background: #e6e6e6;
  width: 18px;
  height: 18px;
  line-height: 18px;
  border-radius: 50%;
  display: inline-block;
  margin: 0 2px;
}

.title {
  font-weight: 600;
}
